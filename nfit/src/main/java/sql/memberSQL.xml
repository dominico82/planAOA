<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nfit.member">
	<insert id="memberJoin" parameterType="nfit.member.model.MemberDTO">
		insert into member_table values(
				member_table_idx.nextval,
				#{member_id},
				#{member_pwd},
				#{member_name},
				#{member_addr},
				#{member_sex},
				#{member_birth},
				#{member_email},
				#{member_tel},
				#{member_tall},
				#{member_weight},0,0)
	</insert>
	<select id="memberLogin" resultType="nfit.member.model.MemberDTO">
		select pwd from member_table where id=#{member_id}
	</select>
	<select id="getuserInfo" resultType="nfit.member.model.MemberDTO">
		select member_name from member_table where id=#{member_id}
	</select>
</mapper>